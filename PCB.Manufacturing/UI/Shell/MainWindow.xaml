<Window
    x:Class="PCB.Manufacturing.UI.Shell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCB.Manufacturing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:preferences="clr-namespace:PCB.Manufacturing.UI.Preferences"
    xmlns:quote="clr-namespace:PCB.Manufacturing.UI.Quote"
    xmlns:order="clr-namespace:PCB.Manufacturing.UI.Order"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Expander
            Grid.Row="0"
            ExpandDirection="Down"
            Header="Preferences"
            IsExpanded="True">
            <preferences:PreferencesControl />
        </Expander>

        <Expander
            Grid.Row="1"
            ExpandDirection="Down"
            Header="Quote">
            <quote:QuoteControl />
        </Expander>

        <Expander
            Grid.Row="2"
            ExpandDirection="Down"
            Header="Order">
            <order:OrderControl />
        </Expander>
    </Grid>
</Window>
